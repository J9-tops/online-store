generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  Hot
  New
  Sale
}

enum UserRole {
  Admin
  Vendor
  User
}

model Sale {
  id             String   @id @default(cuid())
  title          String
  slug            String
  description    String
  discountBadge  String
  discountAmount Float
  couponCode     String
  validFrom      DateTime
  validUntil     DateTime
  isActive       Boolean
  imageUrl       String

  @@unique([title])
}

model Product {
  id          String  @id @default(cuid())
  title       String
  slug        String
  imageUrl    String
  description String
  label       String
  price       Float
  stock       Int
  status      Status?

  categories Category[]

  @@unique([slug])
}

model Category {
  id          String    @id @default(cuid())
  title       String
  slug        String
  description String
  products    Product[]

  @@unique([slug])
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime
  updatedAt DateTime

  name          String
  email         String    @unique
  emailVerified Boolean
  image         String?
  role          UserRole  @default(User)
  banned        Boolean?
  banReason     String?
  banExpires    DateTime?

  @@map("users")
}

